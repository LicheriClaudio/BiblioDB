<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="Archivio">
	<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"	value="jdbc:postgresql://localhost/Archivio" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="Atena09." />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.default_schema" value="Archivio" />

			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.dialect"
                value="org.hibernate.dialect.PostgreSQLDialect" />
            <!-- Configurazioni specifiche per specifici databases -->
            <!-- Per postgresql possiamo specificare lo schema -->
            <property name="hibernate.default_schema" value="public" />
            <!-- Configurazioni specifiche per il comportamento di hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="hibernate." value=""/>
            <!-- Chiedo ad Hibernate di mostrare i comandi SQL inviati al database -->
            <property name="hibernate.show_sql" value="true" />


		</properties>
	</persistence-unit>
</persistence>
